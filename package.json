{
  "name": "zss",
  "version": "2.1.6",
  "description": "Sass for design systems",
  "main": "./src/zss.scss",
  "devDependencies": {
    "node-sass": "^4.12.0",
    "stylelint": "^7.13.0",
    "stylelint-config-zicht": "^0.1.5"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "node-sass src/zss.scss build/zss.css",
    "lint-css": "./node_modules/.bin/stylelint 'src/**/*.scss' --verbose"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zicht/zss.git"
  },
  "keywords": [
    "css",
    "sass",
    "zicht",
    "functional css",
    "design systems"
  ],
  "author": "Zicht Online",
  "license": "MIT",
  "stylelint": {
    "extends": "stylelint-config-zicht",
    "rules": {
      "declaration-property-value-whitelist": {
        "background-color": [
          "$value"
        ],
        "border-color": [
          "$value"
        ],
        "color": [
          "$value"
        ]
      },
      "selector-no-combinator": null
    }
  }
}
